        "body": {
          "mode": "raw",
          "raw": "{\n  \"miner_address\": \"miner_123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mine",
          "host": ["{{base_url}}"],
          "path": ["mine"]
